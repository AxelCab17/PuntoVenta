===============================================================-->
<script src="vendor/chart.js/Chart.min.js"></script>

<!-- SOLO ES DE EJEMPLO - IGNORAR -->
<script src="js/vistas/chart-bar-demo.js"></script>
<script src="js/vistas/chart-pie-demo.js"></script>

</html>
