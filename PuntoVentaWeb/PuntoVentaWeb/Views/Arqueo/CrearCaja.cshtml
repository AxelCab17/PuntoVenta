@model PuntoVentaWeb.Entities.CajaEnt

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Modal para Crear Caja -->
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="modalCrearCajaLabel">Abrir Caja</h5>
        </div>

        <div class="modal-body">
            <form asp-action="CrearCaja">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="MontoInicial" class="control-label"></label>
                    <input asp-for="MontoInicial" class="form-control" />
                    <span asp-validation-for="MontoInicial" class="text-danger"></span>
                </div>

                <div class="form-group text-right">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
