@model IEnumerable<PuntoVentaWeb.Entities.CierreSemanalEnt>

@{
    ViewData["Title"] = "Calcular Cierre Semanal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet">

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-white">Cierre Semanal</h6>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-12">
                    <a class="btn btn-primary" href="@Url.Action("ObtenerTodosArqueos", "Arqueo")">
                        <i class="fa fa-arrow-left"></i> Regresar 
                    </a>
                </div>
            </div>
            <hr />

            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered">
                        <thead class="thead">
                            <tr class="table-head">
                                <th>
                                    @Html.DisplayNameFor(model => model.First().TotalBilletesSemana)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().TotalMonedasSemana)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().TotalEfectivoSemana)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="table-row">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalBilletesSemana)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalMonedasSemana)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalEfectivoSemana)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
}
