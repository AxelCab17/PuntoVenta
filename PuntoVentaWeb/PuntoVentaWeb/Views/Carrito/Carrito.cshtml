@model PuntoVentaWeb.Entities.Carrito

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 ">
                            <h6 class="m-0 font-weight-bold text-white">Cajero</h6>
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="ID">Identificación:</label>
                                    <input type="text" class="form-control" id="ID" value="@Context.Session.GetString("IDENTIFICACION")" readonly>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="nombre">Nombre:</label>
                                    <input type="text" class="form-control" id="nombre" value="@Context.Session.GetString("NOMBRE")" readonly>
                                </div>
                             
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 ">
                            <h6 class="m-0 font-weight-bold text-white">Productos</h6>
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-sm-12">
                                    <div class="input-group input-group-sm">
                                        <input type="text" class="form-control" id="productIdInput" placeholder="Ingrese el ID del producto" onkeydown="if (event.key === 'Enter') buscarProducto()" autofocus>
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button" onclick="buscarProducto()">Buscar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="container mt-3">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Producto</th>
                                                <th>Cantidad</th>
                                                <th>Precio</th>
                                                <th>Total</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Items)
                                            {
                                                <tr class="table-row">
                                                    <td>@item.Producto.IdProducto</td>
                                                    <td>@item.Producto.Nombre</td>
                                                    <td>
                                                        <div class="input-group input-group-sm cantidad-group">
                                                            <form asp-action="AgregarProducto" method="get" class="cantidad-btn" onsubmit="return validarCantidad(@item.Cantidad)">
                                                                <input type="hidden" name="productoId" value="@item.Producto.IdProducto" />
                                                                <input type="hidden" name="cantidad" value="-1" />
                                                                <button class="btn btn-minus btn-sm" type="submit">
                                                                    <i class="fas fa-minus"></i>
                                                                </button>
                                                            </form>
                                                            <input type="text" class="form-control text-center" value="@item.Cantidad" style="max-width: 3em;" readonly>
                                                            <form asp-action="AgregarProducto" method="get" class="cantidad-btn">
                                                                <input type="hidden" name="productoId" value="@item.Producto.IdProducto" />
                                                                <input type="hidden" name="cantidad" value="1" />
                                                                <button class="btn btn-plus btn-sm" type="submit">
                                                                    <i class="fas fa-plus"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </td>
                                                    <td>@item.Producto.Precio</td>
                                                    <td>@(item.Producto.Precio * item.Cantidad)</td>
                                                    <td>
                                                        <form asp-action="EliminarProducto" method="post">
                                                            <input type="hidden" name="productoId" value="@item.Producto.IdProducto" />
                                                            <button type="submit" class="btn btn-exit btn-sm">
                                                                <i class="fas fa-trash-alt"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="text-right">
                                <form asp-action="VaciarCarrito" method="post">
                                    <button type="submit" class="btn btn-exit btn-sm">
                                        Vaciar Carrito
                                    </button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
        <div class="col-sm-4">

            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 ">
                            <h6 class="m-0 font-weight-bold text-white">Detalle de Factura</h6>
                        </div>
                        <div class="card-body">
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupSubTotal">Sub Total</span>
                                </div>
                                <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupSubTotal" id="txtSubTotal" value="@Model.Subtotal" disabled>
                            </div>

                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupIGV">IVA(13%)</span>
                                </div>
                                <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupIGV" id="txtIGV" value="@Model.IVA" disabled>
                            </div>

                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupTotal">Total</span>
                                </div>
                                <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupTotal" id="txtTotal" value="@Model.Total" disabled>
                            </div>

                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="form-group mb-0">
                                <button class="btn btn-all btn-sm btn-block" id="btnTerminarVenta">Terminar Venta</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
<!-- Bootstrap core JavaScript-->
<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
<script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Custom scripts for all pages-->
<script src="~/js/sb-admin-2.js"></script>

