@model PuntoVentaWeb.Entities.UsuarioEnt

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Mi Tienda - Registro</title>
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.css" rel="stylesheet">
</head>
<body class="login-bg">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block">
                                <img src="~/img/logo tienda hd.jpg" style="max-width: 100%; max-height: 100%;" alt="Descripción de la imagen" class="bg-login-image">
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Rellene la Información</h1>
                                    </div>
                                    <form class="user" asp-action="RegistrarUsuario" method="post">
                                        <div class="form-group">
                                            <input asp-for="Identificacion" class="form-control form-control-user" placeholder="Identificación" />
                                            <span asp-validation-for="Identificacion" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Nombre" class="form-control form-control-user" placeholder="Nombre" />
                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Correo" class="form-control form-control-user" placeholder="Correo" />
                                            <span asp-validation-for="Correo" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Contrasenna" class="form-control form-control-user" placeholder="Contraseña" type="password" />
                                            <span asp-validation-for="Contrasenna" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <select asp-for="IdRol" class="form-control form-control-user">
                                                <option value="">Seleccione un rol</option>
                                                @foreach (var rol in ViewBag.Roles)
                                                {
                                                    <option value="@rol.Value">@rol.Text</option>
                                                }
                                            </select>
                                            <span asp-validation-for="IdRol" class="text-danger"></span>
                                        </div>
                                        <!-- Mensaje de error -->
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <button type="submit" class="btn btn-tienda btn-user btn-block">
                                            Registrarse
                                        </button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-action="LoginUsuario" asp-controller="Usuario">Volver </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="~/vendor/jquery/jquery.min.js"></script>
        <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
        <script src="~/js/sb-admin-2.min.js"></script>
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
